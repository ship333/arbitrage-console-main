{
  "id": null,
  "uid": "backend-ops",
  "title": "Backend Ops",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "5xx rate (req/s)",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"backend\",status=~\"5..\"}[5m]))",
          "legendFormat": "5xx rate"
        }
      ]
    },
    {
      "type": "stat",
      "title": "5xx ratio (%)",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{job=\"backend\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"backend\"}[5m])))",
          "legendFormat": "5xx%"
        }
      ]
    },
    {
      "type": "stat",
      "title": "429 rate (req/s)",
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"backend\",status=\"429\"}[5m]))",
          "legendFormat": "429 rate"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Circuit open",
      "gridPos": {"x": 0, "y": 4, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "max(exchange_circuit_breaker_open)",
          "legendFormat": "open"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Kill switch",
      "gridPos": {"x": 6, "y": 4, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "max(kill_switch_enabled)",
          "legendFormat": "1=on"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Bot PnL (USD)",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 4},
      "targets": [
        {
          "expr": "max(bot_pnl_usd)",
          "legendFormat": "PnL"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests by status (rate)",
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total{job=\"backend\"}[5m]))",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (s)",
      "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m])))",
          "legendFormat": "p95"
        }
      ]
    }
  ]
}
