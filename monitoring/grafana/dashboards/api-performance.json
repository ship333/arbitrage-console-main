{
  "id": null,
  "uid": "api-performance",
  "title": "API Performance",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request rate by path (req/s)",
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "sum by (path) (rate(http_requests_total{job=\"backend\"}[5m]))",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 by path (s)",
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (path, le) (rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m])))",
          "legendFormat": "p95 {{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p99 by path (s)",
      "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (path, le) (rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m])))",
          "legendFormat": "p99 {{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "4xx rate by path (req/s)",
      "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (path) (rate(http_requests_total{job=\"backend\",status=~\"4..\"}[5m]))",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx rate by path (req/s)",
      "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (path) (rate(http_requests_total{job=\"backend\",status=~\"5..\"}[5m]))",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "429 rate by path (req/s)",
      "gridPos": {"x": 0, "y": 32, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "sum by (path) (rate(http_requests_total{job=\"backend\",status=\"429\"}[5m]))",
          "legendFormat": "{{path}}"
        }
      ]
    }
  ]
}
