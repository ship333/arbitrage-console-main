# Frontend environment variables (Vite)
# Copy this file to .env and adjust values per environment.

# Base REST API URL (required in staging/prod)
VITE_API_URL=https://api.yourdomain.com/api

# WebSocket base (optional). If omitted, derived from API URL or page origin.
VITE_WS_URL=wss://api.yourdomain.com

# Disable WebSocket realtime (1 = disable; 0 = enable). Useful for tests/staging.
VITE_DISABLE_WS=0

# Require a token login via /login (1 = require; 0 = public)
VITE_REQUIRE_AUTH=1

# Optional WS tuning
# VITE_WS_PING_MS=15000
# VITE_WS_PONG_TIMEOUT_MS=10000
# VITE_WS_BACKOFF_BASE_MS=500
# VITE_WS_BACKOFF_MAX_MS=30000
# VITE_DEBUG_WS=0
# VITE_WS_BADGE_DISCONNECT_SECS=10
